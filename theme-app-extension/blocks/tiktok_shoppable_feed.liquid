{%- if block.settings.heading -%}
  <h2 style="text-align: center;">{{ block.settings.heading }}</h2>
  <div id="tiktok-shoppable-feed-shadab"></div>
  <style>
    .shadab-tiktok-feed-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 99999;
      display: none;
    }
  </style>
  <script src="{{ 'tiktok_shoppable_feed.js' | asset_url }}" defer></script>
  <button class="Polaris-Button">Example button</button>
  <div class="shadab-tiktok-feed-modal" id="shadab-tiktok-modal"></div>
{%- endif -%}

{% schema %}

{
  "name": "Shadab tiktok feed",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shoppable TikTok feed"
    }
  ]
}

{% endschema %}
